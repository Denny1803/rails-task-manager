<h1>Edit task<h1>  

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= check_box :completed, "completed" %>
  <%= label_tag :completed, "Completed" %>
    <%= f.submit %>
<% end %>

<%= link_to "Back to list", task_path %>
